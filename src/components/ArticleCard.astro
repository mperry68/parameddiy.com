---
import { formatDate } from '../utils/formatDate';
import { categoryLabels } from '../config';
import type { CollectionEntry } from 'astro:content';

interface Props {
  article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const { data, slug } = article;
const readingTime = data.readingTime || 5;
---

<article class="article-card">
  <a href={`/articles/${slug}`} class="article-card-link">
    <div class="article-card-content">
      <div class="article-card-header">
        <span class="article-category">{categoryLabels[data.category]}</span>
        {data.featured && <span class="article-featured">Featured</span>}
      </div>
      <h3 class="article-card-title">{data.title}</h3>
      <p class="article-card-summary">{data.summary}</p>
      <div class="article-card-meta">
        <time datetime={data.publishedAt.toISOString()}>{formatDate(data.publishedAt)}</time>
        <span class="reading-time">{readingTime} min read</span>
      </div>
      {data.tags.length > 0 && (
        <div class="article-card-tags">
          {data.tags.slice(0, 3).map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .article-card {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .article-card:hover {
    box-shadow: 0 10px 25px -5px rgba(6, 182, 212, 0.3), 0 0 20px rgba(6, 182, 212, 0.1);
    transform: translateY(-4px);
    border-color: rgba(6, 182, 212, 0.5);
  }

  .article-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .article-card-content {
    padding: 1.5rem;
  }

  .article-card-header {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .article-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #06b6d4;
    letter-spacing: 0.05em;
    background: rgba(6, 182, 212, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    border: 1px solid rgba(6, 182, 212, 0.3);
  }

  .article-featured {
    font-size: 0.75rem;
    font-weight: 600;
    background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
    color: #f1f5f9;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    box-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
  }

  .article-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #f1f5f9;
    line-height: 1.3;
    transition: color 0.2s;
  }

  .article-card:hover .article-card-title {
    color: #06b6d4;
  }

  .article-card-summary {
    color: #94a3b8;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-card-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: #64748b;
    margin-bottom: 0.75rem;
  }

  .reading-time {
    &::before {
      content: 'â€¢';
      margin-right: 0.5rem;
      color: #475569;
    }
  }

  .article-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    background: rgba(51, 65, 85, 0.5);
    color: #cbd5e1;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    border: 1px solid rgba(71, 85, 105, 0.3);
  }
</style>

