---
import { formatDate } from '../utils/formatDate';
import { categoryLabels } from '../config';
import type { CollectionEntry } from 'astro:content';

interface Props {
  article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const { data, slug } = article;
const readingTime = data.readingTime || 5;
---

<article class="article-card">
  <a href={`/articles/${slug}`} class="article-card-link">
    <div class="article-card-content">
      <div class="article-card-header">
        <span class="article-category">{categoryLabels[data.category]}</span>
        {data.featured && <span class="article-featured">Featured</span>}
      </div>
      <h3 class="article-card-title">{data.title}</h3>
      <p class="article-card-summary">{data.summary}</p>
      <div class="article-card-meta">
        <time datetime={data.publishedAt.toISOString()}>{formatDate(data.publishedAt)}</time>
        <span class="reading-time">{readingTime} min read</span>
      </div>
      {data.tags.length > 0 && (
        <div class="article-card-tags">
          {data.tags.slice(0, 3).map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .article-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s;
  }

  .article-card:hover {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .article-card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .article-card-content {
    padding: 1.5rem;
  }

  .article-card-header {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    flex-wrap: wrap;
  }

  .article-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #2563eb;
    letter-spacing: 0.05em;
  }

  .article-featured {
    font-size: 0.75rem;
    font-weight: 600;
    background: #fbbf24;
    color: #92400e;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .article-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #1f2937;
    line-height: 1.3;
  }

  .article-card-summary {
    color: #4b5563;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-card-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }

  .reading-time {
    &::before {
      content: 'â€¢';
      margin-right: 0.5rem;
    }
  }

  .article-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    background: #f3f4f6;
    color: #4b5563;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }
</style>

