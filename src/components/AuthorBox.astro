---
import { siteConfig } from '../config';

interface Props {
  authorName?: string;
  authorTitle?: string;
  authorBio?: string;
}

const {
  authorName = 'Paramedical Knowledge Editorial Team',
  authorTitle = 'Health Writer & Research Editor',
  authorBio = 'Our editorial team is committed to providing accurate, evidence-based health information.',
} = Astro.props;
---

<div class="author-box">
  <div class="author-content">
    <div class="author-info">
      <h3 class="author-name">{authorName}</h3>
      <p class="author-title">{authorTitle}</p>
      {authorBio && <p class="author-bio">{authorBio}</p>}
    </div>
    <div class="author-link">
      <a href="/about">Learn more about our editorial team â†’</a>
    </div>
  </div>
</div>

<style>
  .author-box {
    margin: 3rem 0;
    padding: 1.5rem;
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
  }

  .author-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .author-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 0.25rem;
  }

  .author-title {
    font-size: 0.875rem;
    color: #64748b;
    margin-bottom: 0.5rem;
  }

  .author-bio {
    font-size: 0.9375rem;
    color: #475569;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .author-link {
    margin-top: 0.5rem;
  }

  .author-link a {
    font-size: 0.875rem;
    color: #0891b2;
    text-decoration: none;
    font-weight: 500;
  }

  .author-link a:hover {
    color: #06b6d4;
    text-decoration: underline;
  }

  @media (min-width: 768px) {
    .author-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }

    .author-info {
      flex: 1;
    }
  }
</style>

