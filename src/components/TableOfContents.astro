---
import type { TocItem } from '../utils/getTableOfContents';

interface Props {
  items: TocItem[];
}

const { items } = Astro.props;
---

{items.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <div class="toc-header">
      <h3 class="toc-title">Table of Contents</h3>
      <button class="toc-toggle" aria-label="Toggle table of contents" aria-expanded="false" id="toc-toggle">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 6l4 4 4-4" />
        </svg>
      </button>
    </div>
    <ul class="toc-list" id="toc-list">
      {items.map((item) => (
        <li class={`toc-item toc-level-${item.level}`}>
          <a href={`#${item.id}`} class="toc-link">
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .toc-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .toc-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: #0f172a;
  }

  .toc-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 1px solid #cbd5e1;
    border-radius: 4px;
    padding: 0.375rem;
    cursor: pointer;
    color: #475569;
    transition: all 0.2s;
  }

  .toc-toggle:hover {
    background: #f1f5f9;
    border-color: #94a3b8;
  }

  .toc-toggle[aria-expanded="true"] svg {
    transform: rotate(180deg);
  }

  .toc-toggle svg {
    transition: transform 0.2s;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-link {
    color: #475569;
    text-decoration: none;
    transition: color 0.2s;
    display: block;
  }

  .toc-link:hover {
    color: #0891b2;
    text-decoration: none;
  }

  .toc-level-2 {
    padding-left: 0;
  }

  .toc-level-3 {
    padding-left: 1rem;
    font-size: 0.9375rem;
  }

  .toc-level-4 {
    padding-left: 1.5rem;
    font-size: 0.875rem;
  }

  @media (max-width: 1023px) {
    .toc-list {
      display: none;
    }

    .toc.toc-expanded .toc-list {
      display: block;
    }

    .toc-toggle {
      display: flex;
    }
  }

  @media (min-width: 1024px) {
    .toc {
      position: sticky;
      top: 100px;
      max-height: calc(100vh - 120px);
      overflow-y: auto;
    }

    .toc-toggle {
      display: none;
    }

    .toc-list {
      display: block !important;
    }
  }
</style>

<script>
  (function() {
    const tocToggle = document.getElementById('toc-toggle');
    const toc = document.querySelector('.toc');

    if (tocToggle && toc) {
      tocToggle.addEventListener('click', function() {
        const isExpanded = tocToggle.getAttribute('aria-expanded') === 'true';
        tocToggle.setAttribute('aria-expanded', String(!isExpanded));
        toc.classList.toggle('toc-expanded', !isExpanded);
      });
    }
  })();
</script>
