---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
---

{href ? (
  <a href={href} class="tag tag-link">
    {tag}
  </a>
) : (
  <span class="tag">{tag}</span>
)}

<style>
  .tag {
    display: inline-block;
    font-size: 0.875rem;
    background: #ecfeff;
    color: #0891b2;
    padding: 0.375rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.2s;
  }

  .tag-link:hover {
    background: #cffafe;
    text-decoration: none;
  }
</style>

