---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdSlot from '../../components/AdSlot.astro';
import { getCollection } from 'astro:content';
import { categories, categoryLabels } from '../../config';

const allArticles = await getCollection('articles', ({ data }) => {
  return data.publishedAt <= new Date();
});
---

<BaseLayout
  title="Categories"
  description="Browse articles by category on Paramedical Knowledge Hub"
>
  <div class="categories-page">
    <div class="page-header">
      <h1>Article Categories</h1>
      <p class="page-description">
        Browse articles organized by health topics and paramedical fields
      </p>
    </div>

    <AdSlot position="top-page" />

    <div class="categories-grid">
      {categories.map((category) => {
        const categoryArticles = allArticles.filter((a) => a.data.category === category);
        return (
          <a href={`/categories/${category}`} class="category-card">
            <h2 class="category-title">{categoryLabels[category]}</h2>
            <p class="category-description">
              {categoryArticles.length} article{categoryArticles.length !== 1 ? 's' : ''} available
            </p>
            <span class="category-link">View articles â†’</span>
          </a>
        );
      })}
    </div>

    <AdSlot position="bottom-page" />
  </div>
</BaseLayout>

<style>
  .categories-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #06b6d4 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-description {
    font-size: 1.125rem;
    color: #94a3b8;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(6, 182, 212, 0.2);
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(10px);
  }

  .category-card:hover {
    box-shadow: 0 10px 25px -5px rgba(6, 182, 212, 0.3);
    transform: translateY(-4px);
    border-color: rgba(6, 182, 212, 0.5);
    text-decoration: none;
  }

  .category-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: #cbd5e1;
  }

  .category-description {
    color: #94a3b8;
    margin-bottom: 1rem;
    flex: 1;
  }

  .category-link {
    color: #06b6d4;
    font-weight: 600;
    margin-top: auto;
    transition: color 0.2s;
  }

  .category-card:hover .category-link {
    color: #22d3ee;
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

